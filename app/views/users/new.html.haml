= form_for(@user) do |f|
  = render 'shared/error_messages'
  .form_container
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation
    .actions
      = f.submit "Sign up"
